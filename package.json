{
    "author": "Steven Olmsted <steven.olmsted@ibigroup.com>",
    "babel": {
        "presets": [
            "babili",
            "latest"
        ],
        "sourceMaps": "inline"
    },
    "bugs": "https://github.com/ibi-group/eslint-config-isotropic/issues",
    "contributors": [
        "Duane Sibilly <duane.sibilly@ibigroup.com>"
    ],
    "description": "Shareable eslint configuration.",
    "devDependencies": {
        "babel-cli": "~6.22.2",
        "babel-istanbul": "~0.12.1",
        "babel-preset-babili": "~0.0.10",
        "babel-preset-latest": "~6.22.0",
        "chai": "~3.5.0",
        "eslint": "~3.15.0",
        "mocha": "~3.2.0",
        "nsp": "~2.6.2"
    },
    "engines": {
        "node": "^6.9.5",
        "npm": "^4.1.2"
    },
    "eslintConfig": {
        "env": {
            "es6": true
        },
        "extends": "./lib/eslint-config-isotropic.js",
        "parserOptions": {
            "ecmaFeatures": {
                "experimentalObjectRestSpread": true,
                "globalReturn": false,
                "impliedStrict": true,
                "jsx": false
            },
            "ecmaVersion": 2017,
            "sourceType": "module"
        },
        "root": true
    },
    "homepage": "https://github.com/ibi-group/eslint-config-isotropic",
    "license": "BSD-3-Clause",
    "main": "lib/eslint-config-isotropic.js",
    "name": "eslint-config-isotropic",
    "repository": "ibi-group/eslint-config-isotropic",
    "scripts": {
        "build": "babel js -d lib",
        "lint": "npm run build && eslint js test",
        "posttest": "[ -z \"$npm_config_coverage\" ] || babel-istanbul check-coverage --branches 100 --functions 100 --lines 100 --statements 100",
        "prepare": "npm run build",
        "prepublishOnly": "npm run securityCheck && npm test --coverage",
        "pretest": "npm run lint",
        "securityCheck": "nsp check",
        "test": "babel-node ./node_modules/.bin/babel-istanbul test _mocha"
    },
    "version": "0.4.0"
}
