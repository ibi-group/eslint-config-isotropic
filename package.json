{
    "author": "Steven Olmsted <steven.olmsted@ibigroup.com>",
    "babel": {
        "env": {
            "build": {
                "presets": [
                    "babel-preset-minify"
                ]
            },
            "test": {
                "plugins": [
                    "babel-plugin-istanbul"
                ]
            }
        },
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ],
        "sourceMaps": "inline"
    },
    "bugs": "https://github.com/ibi-group/eslint-config-isotropic/issues",
    "contributors": [
        "Duane Sibilly <duane.sibilly@ibigroup.com>"
    ],
    "description": "Shareable eslint configuration.",
    "devDependencies": {
        "@babel/cli": "~7.1.5",
        "@babel/core": "~7.1.6",
        "babel-plugin-istanbul": "~5.1.0",
        "@babel/preset-env": "~7.1.6",
        "babel-preset-minify": "~0.5.0",
        "@babel/register": "~7.0.0",
        "chai": "~4.2.0",
        "cross-env": "~5.2.0",
        "eslint": "~5.9.0",
        "eslint-find-rules": "~3.3.1",
        "eslint-plugin-isotropic": "~0.1.0",
        "mocha": "~5.2.0",
        "nyc": "~13.1.0"
    },
    "engines": {
        "node": "^10.13.0",
        "npm": "^6.4.1"
    },
    "eslintConfig": {
        "env": {
            "es6": true
        },
        "extends": "plugin:isotropic/isotropic",
        "parserOptions": {
            "ecmaFeatures": {
                "globalReturn": false,
                "impliedStrict": true,
                "jsx": false
            },
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "plugins": [
            "isotropic"
        ],
        "root": true
    },
    "homepage": "https://github.com/ibi-group/eslint-config-isotropic",
    "license": "BSD-3-Clause",
    "main": "lib/eslint-config-isotropic.js",
    "name": "eslint-config-isotropic",
    "nyc": {
        "branches": 100,
        "check-coverage": false,
        "functions": 100,
        "instrument": false,
        "lines": 100,
        "per-file": false,
        "reporter": [
            "lcov",
            "text-summary"
        ],
        "require": [
            "@babel/register"
        ],
        "sourceMap": false,
        "statements": 100
    },
    "repository": "ibi-group/eslint-config-isotropic",
    "scripts": {
        "build": "cross-env BABEL_ENV=build babel js -d lib",
        "lint": "npm run build > /dev/null && eslint-find-rules -u && eslint js test",
        "posttest": "[ -z \"$npm_config_coverage\" ] || nyc check-coverage",
        "prepare": "npm run build",
        "prepublishOnly": "npm audit && npm test --coverage",
        "pretest": "npm run lint",
        "test": "cross-env BABEL_ENV=test nyc mocha"
    },
    "version": "0.6.0"
}
